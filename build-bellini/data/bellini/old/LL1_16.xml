		<body xml:lang="ita">

			<div type="fronte-recto">
				<pb n="1" xml:id="LL1.16_fol_1fr" facs="#LL1.16_folio_1fr"/>

				<div type="opener" n="o_01">
					<ab type="parag" n="ab_01">
						<s type="sentence" n="s_01">
							<lb xml:id="LL1.16_lb_1fr_01" n="1" facs="#LL1.16_line_1fr_01"/>
							<dateline>
								<date when="">Juin 26</date>
								<placeName ref="TEI-ListPlace.xml#Put">Puteau</placeName>
								–
								<placeName>
									<address>N:° 19 bis rampe</address>
								</placeName>
								<lb xml:id="LL1.16_lb_1fr_02" n="2" facs="#LL1.16_line_1fr_02"/>
								<hi rend="underline align(right)">
									<placeName ref="TEI-ListPlace.xml#NSS">de Neuilly</placeName>
								</hi>
							</dateline>
						</s>
					</ab>
				</div>
				<div type="letter-body" n="t_01">
					.
					<ab type="parag" n="ab_02">
						<s type="sentence" n="s_02">
							<salute>
								<lb xml:id="LL1.16_lb_1fr_03" n="3" facs="#LL1.16_line_1fr_03"/>
								<hi rend="align(left)">
									Mio caro
									<persName ref="TEI-ListPerson.xml#CP" role="librettist">Carluccio</persName>
									<ptr target="#LL1_16_note1"/>
									<!-- verificare notazione rif -->
								</hi>
							</salute>
						</s>
					</ab>

					<ab type="parag" n="ab_03">
						<s type="sentence" n="s_03">
							<lb xml:id="LL1.16_lb_1fr_04" n="4" facs="#LL1.16_line_1fr_04"/>
							<hi rend="align(right)">
								Avendo steso l'intero
								<term subtype="music-term" ref="TEI-ListTerm.xml#duetto">duetto</term>
								<ptr target="#LL1_16_note2"/>
							</hi>
							<lb xml:id="LL1.16_lb_1fr_05" n="5" facs="#LL1.16_line_1fr_05"/>
							e mancando in esso qualche
							<lb xml:id="LL1.16_lb_1fr_06" n="6" facs="#LL1.16_line_1fr_06"/>
							cosetta, desidererei che tu
							<lb xml:id="LL1.16_lb_1fr_07" n="7" facs="#LL1.16_line_1fr_07"/>
							t'incommodassi a venire à
							<lb xml:id="LL1.16_lb_1fr_08" n="8" facs="#LL1.16_line_1fr_08"/>
							<placeName ref="TEI-ListPlace.xml#Put">Puteau</placeName>
							per tutto fissare, e
							<lb xml:id="LL1.16_lb_1fr_09" n="9" facs="#LL1.16_line_1fr_09"/>
							nell'istesso tempo darmi la
							<lb xml:id="LL1.16_lb_1fr_10" n="10" facs="#LL1.16_line_1fr_10"/>
							<term subtype="music-term" ref="TEI-ListTerm.xml#sortita">sortita</term>
							di
							<persName ref="TEI-ListPerson.xml#GBR" role="tenore">Rubini</persName>
							<ptr target="#LL1_16_note3"/>
							, se è
							<w>
								termi
								<lb xml:id="LL1.16_lb_1fr_11" n="11" facs="#LL1.16_line_1fr_11" break="no"/>
								nata
							</w>
							.
						</s>
						<s type="sentence" n="s_04">
							T'aspetto in qual giorno
							<lb xml:id="LL1.16_lb_1fr_12" n="12" facs="#LL1.16_line_1fr_12"/>
							ed in qual'ora vorrai.
						</s>
					</ab>
				</div>
				<div type="closer" n="c_01">
					<ab type="parag" n="ab_04">
						<s type="sentence" n="s_05">

							<salute>
								- Addio
								<lb xml:id="LL1.16_lb_1fr_13" n="13" facs="#LL1.16_line_1fr_13"/>
								<hi rend="align(right)">
									Il tuo
									<persName ref="TEI-ListPerson.xml#VB" role="composer">
										<hi rend="underline">Vincenzillo</hi>
									</persName>
								</hi>
							</salute>
						</s>
					</ab>
				</div>
			</div>
			<div type="retro-recto">
				<pb n="2" xml:id="LL1.16_fol_1rr" facs="#LL1.16_folio_1rr"/>
			</div>
			<div type="retro-verso">
				<pb n="3" xml:id="LL1.16_fol_1rv" facs="#LL1.16_folio_1rv"/>
			</div>


			<div type="fronte-verso">
				<pb n="4" xml:id="LL1.16_fol_1fv_body" facs="#LL1.16_folio_1fv"/>
				<ab type="paratext" subtype="addition" hand="#h2" xml:id="LL1.16_hs_1fv_02" facs="#LL1.16_hotspot_1fv_02">
					<!-- terza mano del bibliotecario -->
					N. 27 Lettera del Bellini sul
