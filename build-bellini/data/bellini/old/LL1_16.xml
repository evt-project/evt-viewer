	<text type="letter" xml:id="LL1.16" n="LL1.16">
		<front type="envelop">
			<!-- FRONTE VERSO -->
			<pb n="4" xml:id="LL1.16_fol_1fv_front" facs="#LL1.16_folio_1fv"/>
			<div xml:id="LL1.16_hs_1fv_05" facs="#LL1.16_hotspot_1fv_05" type="sent">
