					<stamp type="postage">
						<!-- timbro del destinatario con data -->
						<placeName>
							<unclear reason="illegible"/>
						</placeName>
						<date when="1834-06-27">
							27
							<unclear reason="illegible">juin</unclear>
							1834
						</date>
					</stamp>
				</ab>
				<ab>
					<address type="receiver">
						<!--  informazioni del destinatario -->
						<lb xml:id="LL1.16_lb_1fv_01" n="1" facs="#LL1.16_line_1fv_01"/>
						<addrLine>à Monsieur</addrLine>
						<lb xml:id="LL1.16_lb_1fv_02" n="2" facs="#LL1.16_line_1fv_02"/>
						<addrLine>
							Monsieur le Comte
							<persName ref="TEI-ListPerson.xml#CP" role="librettist">Pepoli</persName>
						</addrLine>
						<lb xml:id="LL1.16_lb_1fv_03" n="3" facs="#LL1.16_line_1fv_03"/>
						<addrLine>N:° 1: passage des petits Pères</addrLine>
						<lb xml:id="LL1.16_lb_1fv_04" n="4" facs="#LL1.16_line_1fv_04"/>
						<addrLine>
							à
							<placeName ref="TEI-ListPlace.xml#Paris">Paris</placeName>
						</addrLine>
					</address>
				</ab>
			</div>
