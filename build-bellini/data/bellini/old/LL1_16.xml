						<!-- timbro del mittente con data -->
						<mentioned>
							<placeName ref="TEI-ListPlace.xml#NSS">NEUILLY - SUR - SEINE</placeName>
							<date when="1834-06-27">27  JUIN 1834</date>
						</mentioned>
					</stamp>
				</ab>
			</div>
			<div xml:id="LL1.16_hs_1fv_03-1fv_04" facs="#LL1.16_hotspot_1fv_03 #LL1.16_hotspot_1fv_04" type="destination">
				<ab>
